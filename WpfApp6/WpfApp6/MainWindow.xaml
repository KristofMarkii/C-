<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Grid Margin="10">
        <StackPanel Margin="10" Orientation="Vertical">
            <TextBox Width="200" Height="20" FontSize="15" Text="{Binding nev}"></TextBox>
            <Border BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <TextBox Text="Cím adatok :" FontSize="15" FontWeight="Bold" Margin="5"></TextBox>
                    <TextBox FontSize="15" Text="{Binding utcaszam}" Margin="5"></TextBox>
                    <TextBox FontSize="15" Text="{Binding varos}" Margin="5"></TextBox>
                </StackPanel>
                
            </Border>
            </StackPanel>

    </Grid>
</Window>
